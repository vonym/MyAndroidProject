<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/change_et_oldName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要修改的书名"
        android:singleLine="true" />

    <EditText
        android:id="@+id/change_et_newName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入修改后的书名"
        android:singleLine="true" />

    <EditText
        android:id="@+id/change_et_newPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入修改后的价格"
        android:singleLine="true" />

    <Button
        android:id="@+id/change_btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_style"
        android:text="确   定"
        android:textColor="#4f851e"
        android:textSize="18sp"/>
</LinearLayout>